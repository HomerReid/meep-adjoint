#!/bin/bash

######################################################################
######################################################################
######################################################################
MSG="script should be run from documentation root directory"
test -f _build      && { echo ${MSG}; exit 1; }
test -f _build/html && { echo ${MSG}; exit 1; }

######################################################################
######################################################################
######################################################################
cd _build/html
git add --all .
git commit -a -m"updates"
git push origin gh-pages
