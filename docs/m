#!/bin/bash

make html 2>&1 | tee /tmp/sphinx.out

##################################################
# forcing browser reload...
##################################################
ACTIVE=`xdotool getactivewindow`

wmctrl -pGl | grep 'meep_adjoint.*Chrom' | while read WID REST 
do 
  xdotool windowactivate --sync ${WID} key ctrl+r
done

xdotool windowactivate --sync ${ACTIVE} 
